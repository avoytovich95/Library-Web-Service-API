<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <!-- Servlets ==================================================================================================-->
    <servlet>
        <servlet-name>Book</servlet-name>
        <servlet-class>control.BookServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LateFee</servlet-name>
        <servlet-class>control.LateFeeServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>Guest</servlet-name>
        <servlet-class>control.GuestServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CheckOut</servlet-name>
        <servlet-class>control.CheckOutServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CheckIn</servlet-name>
        <servlet-class>control.CheckInServlet</servlet-class>
    </servlet>

    <!-- Mappings -->
    <servlet-mapping>
        <servlet-name>Book</servlet-name>
        <url-pattern>/book</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LateFee</servlet-name>
        <url-pattern>/latefee</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>Guest</servlet-name>
        <url-pattern>/guest</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CheckOut</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CheckIn</servlet-name>
        <url-pattern>/checkin</url-pattern>
    </servlet-mapping>

    <!-- Views =====================================================================================================-->
    <servlet>
        <servlet-name>LateFeeView</servlet-name>
        <servlet-class>view.LateFeeView</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>BookView</servlet-name>
        <servlet-class>view.BookView</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CheckOutView</servlet-name>
        <servlet-class>view.CheckOutView</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>GuestView</servlet-name>
        <servlet-class>view.GuestView</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CheckInView</servlet-name>
        <servlet-class>view.CheckInView</servlet-class>
    </servlet>
    
    <!-- View Mappings -->
    <servlet-mapping>
        <servlet-name>LateFeeView</servlet-name>
        <url-pattern>/latefeeresponse</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>BookView</servlet-name>
        <url-pattern>/bookresponse</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CheckOutView</servlet-name>
        <url-pattern>/checkoutresponse</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>GuestView</servlet-name>
        <url-pattern>/guestresponse</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CheckInView</servlet-name>
        <url-pattern>/checkinresponse</url-pattern>
    </servlet-mapping>
    
    
</web-app>